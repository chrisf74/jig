<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="js-app-region"></div>
    <script>
      user = '<%= render(file: 'users/show.pagejson.jbuilder').html_safe %>';
      App.start({ user: JSON.parse(user) });
    </script>
  </body>
</html>
